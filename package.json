{
  "name": "sample-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": ">=7",
    "node": ">=14.16.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "cross-env NODE_ENV=production next build && next export",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:js": "npm run lint:eslint -- . --ext .js,.jsx,.ts,.tsx",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint src/**/*.{css,scss}",
    "lint:css:fix": "npm run lint:css -- --fix",
    "prettier": "prettier --no-error-on-unmatched-pattern --check {src,pages,__tests__}/**/*.{ts,tsx,js,jsx,css,scss}",
    "prettier:fix": "prettier --no-error-on-unmatched-pattern --write {src,pages,__tests__}/**/*.{ts,tsx,js,jsx,css,scss}",
    "jest": "jest --coverage",
    "test": "npm run prettier && npm run lint && npm run jest",
    "test:e2e:run:novideo": "cypress run --config video=false",
    "test:e2e:headless": "rimraf __tests__/integration/e2e/videos && cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e": "start-server-and-test start http://localhost:3000 test:e2e:open",
    "test:e2e:run": "start-server-and-test start http://localhost:3000 test:e2e:headless",
    "test:perf": "rimraf .lighthouseci && lhci autorun",
    "test:perf:run": "start-server-and-test start http://localhost:3000 test:perf",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss}": [
      "npm run prettier:fix",
      "npm run lint:fix",
      "git add --force"
    ],
    "*.{md,json}": [
      "npm run prettier:fix",
      "git add --force"
    ]
  },
  "dependencies": {
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@lhci/cli": "^0.8.2",
    "@testing-library/cypress": "^8.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/react": "17.0.30",
    "cross-env": "^7.0.3",
    "cypress": "^8.6.0",
    "dotenv": "^10.0.0",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "next-page-tester": "^0.29.1",
    "prettier": "^2.4.1",
    "sass": "^1.43.2",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.6",
    "typescript": "4.4.4"
  }
}
