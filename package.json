{
  "name": "sample-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": ">=7",
    "node": ">=14.16.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:test": "cross-env NODE_ENV=test npm run build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "start": "cross-env NODE_ENV=production next start",
    "export": "cross-env NODE_ENV=production next build && next export",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:js": "npm run lint:eslint -- . --ext .js,.jsx,.ts,.tsx",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint src/**/*.{css,scss}",
    "lint:css:fix": "npm run lint:css -- --fix",
    "prettier": "prettier --no-error-on-unmatched-pattern --check {src,pages,__tests__}/**/*.{ts,tsx,js,jsx,css,scss}",
    "prettier:fix": "prettier --no-error-on-unmatched-pattern --write {src,pages,__tests__}/**/*.{ts,tsx,js,jsx,css,scss}",
    "jest": "jest --coverage",
    "test": "cross-env NODE_ENV=test rimraf jest-coverage && npm run prettier && npm run lint && npm run jest",
    "test:e2e:run:novideo": "cross-env NODE_ENV=test cypress run --config video=false",
    "test:e2e:headless": "rimraf __tests__/integration/e2e/videos && cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e": "cross-env NODE_ENV=test rimraf .nyc_output cypress-coverage && start-server-and-test start http://localhost:3000 test:e2e:open",
    "test:e2e:run": "cross-env NODE_ENV=test rimraf .nyc_output cypress-coverage && start-server-and-test start http://localhost:3000 test:e2e:headless",
    "test:perf": "rimraf .lighthouseci && lhci autorun",
    "test:perf:run": "start-server-and-test start http://localhost:3000 test:perf",
    "test:bundlesize": "npm run build && size-limit",
    "prepare": "husky install",
    "cover:combine": "rimraf .nyc_output && nyc merge jest-coverage .nyc_output/jest-coverage.json && nyc merge cypress-coverage .nyc_output/cypress-coverage.json",
    "cover:report": "npm run cover:combine && nyc report --report-dir=coverage"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run prettier:fix",
      "npm run lint:js:fix",
      "git add --force"
    ],
    "*.{css,scss}": [
      "npm run prettier:fix",
      "npm run lint:css:fix",
      "git add --force"
    ],
    "*.{md,json}": [
      "npm run prettier:fix",
      "git add --force"
    ]
  },
  "dependencies": {
    "next": "12.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@cypress/code-coverage": "^3.9.11",
    "@lhci/cli": "^0.8.2",
    "@next/bundle-analyzer": "^12.0.4",
    "@size-limit/file": "^7.0.3",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.3",
    "@types/react": "17.0.36",
    "babel-plugin-istanbul": "^6.1.1",
    "cross-env": "^7.0.3",
    "cypress": "^9.1.0",
    "dotenv": "^10.0.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "next-compose-plugins": "^2.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "sass": "^1.43.4",
    "size-limit": "^7.0.3",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^24.0.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "typescript": "4.5.2"
  }
}
